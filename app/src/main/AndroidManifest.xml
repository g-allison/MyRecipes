<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.myrecipes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".models.ParseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyRecipes">
        <activity android:name=".ui.profile.SettingsActivity" />
        <activity android:name=".ui.profile.add.AddRecipeActivity" />
        <activity android:name=".ui.openingScreen.SignupActivity" />
        <activity android:name=".ui.openingScreen.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.openingScreen.MainActivity"
            android:windowSoftInputMode="adjustPan"
        />
        <activity android:name=".ui.postActivity.PostActivity" />
    </application>

</manifest>